@model IEnumerable<SeminarDemo.Models.Student>
@{
    ViewData["Title"] = "Students List";
}

<h2>Students List</h2>
<p>
    <a href="/Student/Create" class="btn btn-primary">Add New Student</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>
                    <a href="/Student/Edit/@student.Id" class="btn btn-warning">Edit</a>
                    <a href="/Student/Delete/@student.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
