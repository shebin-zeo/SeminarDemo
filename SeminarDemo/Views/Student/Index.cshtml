@model IEnumerable<SeminarDemo.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<h2>Students List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No student data available.</td>
            </tr>
        }
    </tbody>
</table>
